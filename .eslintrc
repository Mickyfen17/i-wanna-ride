{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "arrow-body-style": [0],
    "react/jsx-uses-react": ["error"],
    "react/jsx-uses-vars": ["error"],
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "trailingComma": "all", "bracketSpacing": true }
    ]
  },
  "plugins": ["prettier", "react"]
}
